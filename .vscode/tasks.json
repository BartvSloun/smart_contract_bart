{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile Contract",
            "type": "shell",
            "command": "cargo partisia-contract build --release",
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "Compile All Contracts",
            "type": "shell",
            "command": "cargo partisia-contract build --release",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Run Java tests",
            "type": "shell",
            "command": "mvn test",
            "options": {
                "cwd": "${workspaceFolder}/java-test"
            },
            "problemMatcher": [],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "Deploy Petition Contract",
            "type": "shell",
            "command": "cargo partisia-contract cli tx deploy --gas 2500000 --privatekey .vscode/A.pk target/wasm32-unknown-unknown/release/petition.wasm target/wasm32-unknown-unknown/release/petition.abi 'Cake is better than oatmeal.'",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Sign petition for Person A",
            "type": "shell",
            "command": "cargo partisia-contract cli tx action --gas 20000 --privatekey .vscode/A.pk ${input:contract-address} sign",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Sign petition for Person B",
            "type": "shell",
            "command": "cargo partisia-contract cli tx action --gas 20000 --privatekey .vscode/B.pk ${input:contract-address} sign",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Sign petition for Person C",
            "type": "shell",
            "command": "cargo partisia-contract cli tx action --gas 20000 --privatekey .vscode/C.pk ${input:contract-address} sign",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "inputs": [
        {
            "id": "contract-address",
            "description": "The Address of a deployed Petition contract.",
            "type": "promptString"
        }

    ]
}