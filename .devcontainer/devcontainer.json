// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/ubuntu
{
	"name": "Partisia Smart Contract Web IDE",
	"build": {
		"dockerfile": "Dockerfile"
	},
	"shutdownAction": "stopContainer",
	"customizations": {
		// Configure properties specific to VS Code.
		"codespaces": {
			"openFiles": [
				"README.md",
				"tutorial/Change-the-contract.md",
				"tutorial/Deploy-your-first-contract.md",
				"tutorial/Interact-with-your-first-contract.md",
				"tutorial/The-power-of-zk.md"
			]
		},
		"vscode": {
			// Set *default* container specific settings.json values on container create.
			"settings": {
			},
			"extensions": [
				"vscjava.vscode-java-pack",
				"rust-lang.rust-analyzer",
				"ms-azuretools.vscode-docker",
				"ms-vscode-remote.remote-containers"
			]
		}
	},
	"postStartCommand": {
		"tutorial-copy": "cp -r /workspaces/web-ide/tutorial /build/example-contracts/",
		"README-copy": "cp -r /workspaces/web-ide/README.md /build/example-contracts/"
	},
	"workspaceFolder": "/build/example-contracts",
	"postAttachCommand": {
		"vscode-copy": "cp -r /workspaces/web-ide/.vscode /build/example-contracts/",
	}
}